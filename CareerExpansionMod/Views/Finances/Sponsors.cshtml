    var AlcoholSponsor = ViewBag.AlcoholSponsor as v2k4FIFAModding.Career.CME.Finances.Sponsor;
    var DrinksSponsor = ViewBag.DrinksSponsor as v2k4FIFAModding.Career.CME.Finances.Sponsor;
