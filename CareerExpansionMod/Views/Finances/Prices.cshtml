    <div class="container">
        <div class="row">
            <div class="col-3">
                <div class="card card-2x">
                    <div class="card-body">
                        <h4 class="EAFont text-center">Alcohol</h4>
                        <img src="~/images/finances/prices/cafefootball-bar-grey-rescale.jpg" style="width:100%; height: 200px;" />
