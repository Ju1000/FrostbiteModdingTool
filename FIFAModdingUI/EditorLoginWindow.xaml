<Window x:Class="FIFAModdingUI.EditorLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIFAModdingUI"
        mc:Ignorable="d"
        Title="Editor Login" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions></Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Button x:Name="btnSkip" Click="btnSkip_Click" Margin="0,0,0,10">Skip (Limited Access)</Button>

            <Button x:Name="btnLogin" Click="btnLogin_Click" Margin="0,0,0,10">Login (Full Access)</Button>
            <TextBlock x:Name="txtStatus" ></TextBlock>
        </StackPanel>
    </Grid>
</Window>
