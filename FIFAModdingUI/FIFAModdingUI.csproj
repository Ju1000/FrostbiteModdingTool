<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <PublishTrimmed>false</PublishTrimmed>
    <PublishSingleFile>true</PublishSingleFile>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishReadyToRun>true</PublishReadyToRun>
    <ApplicationIcon>discordicon.ico</ApplicationIcon>
    <Company>PARGSoft</Company>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE</DefineConstants>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="download.png" />
    <None Remove="etc\Simple-Injection.dll" />
    <None Remove="ini\AIObjectiveSystem_FIFA19.ini" />
    <None Remove="ini\AIObjectiveSystem_FIFA20.ini" />
    <None Remove="ini\ATTRIBUTE_WEIGHTS.ini" />
    <None Remove="ini\ContextEffect_FIFA19.ini" />
    <None Remove="ini\ContextEffect_FIFA20.ini" />
    <None Remove="ini\UnlockBootsAndCelebrations.ini" />
    <None Remove="ini\_FIFA19_base.ini" />
    <None Remove="ini\_FIFA20_base.ini" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="etc\Simple-Injection.dll" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="ini\AIObjectiveSystem_FIFA19.ini">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="ini\AIObjectiveSystem_FIFA20.ini" />
    <EmbeddedResource Include="ini\ATTRIBUTE_WEIGHTS.ini">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="ini\ContextEffect_FIFA19.ini">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="ini\UnlockBootsAndCelebrations.ini">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="ini\_FIFA19_base.ini">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="ini\_FIFA20_base.ini" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bleak" Version="3.1.1" />
    <PackageReference Include="Extended.Wpf.Toolkit" Version="3.5.0" />
    <PackageReference Include="MahApps.Metro" Version="1.6.5" />
    <PackageReference Include="Ookii.Dialogs.Wpf" Version="1.1.0" />
    <PackageReference Include="System.Management" Version="4.5.0" />
    <PackageReference Include="System.Xml.ReaderWriter" Version="4.3.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\v2k4FIFAModdingCL\v2k4FIFAModdingCL.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="FifaLibrary19">
      <HintPath>..\v2k4FIFAModdingCL\FifaLibrary19.dll</HintPath>
    </Reference>
    <Reference Include="Simple-Injection">
      <HintPath>etc\Simple-Injection.dll</HintPath>
    </Reference>
    <Reference Include="VAMemory">
      <HintPath>VAMemory.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="ini\ContextEffect_FIFA20.ini" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\x64\Debug\FIFACareerDLL.dll" Link="FIFACareerDLL.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="download.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>