<Window x:Class="FIFAModdingUI.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIFAModdingUI"
        mc:Ignorable="d"
        Title="OverlayWindow" Height="450" Width="800"
        AllowsTransparency="True" WindowStyle="None" >
    <Window.Background>
        <SolidColorBrush x:Name="WindowOpacityColor" Opacity="0.85" Color="Black"/>
    </Window.Background>
    <StackPanel>
        <Button Content="v2k4 F2"
                HorizontalAlignment="Left"
                Margin="0,0,0,0"
                VerticalAlignment="Top"
                Width="50"
                Visibility="Visible"
            />
        <TextBlock x:Name="hookedtext" Background="White" Width="100" Height="25" Margin="100,-27,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                   TextAlignment="Center"
                   Visibility="Hidden"
                   >Hooked!</TextBlock>
        <TextBlock Background="White" Width="250" Height="25" Margin="0,-27,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                   TextAlignment="Center"
                   Visibility="Visible"
                   >Paulv2k4 Career Mode DLL v0 Alpha 1</TextBlock>
        <TabControl x:Name="MainViewer" Grid.Row="1" Margin="10" IsEnabled="False">
            <TabItem x:Name="TabCareer" Header="Career" IsEnabled="False">
                <Grid x:Name="GridOfTiles">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center"  Grid.Row="1"  Grid.Column="1" Margin="10" Background="White" x:Name="btnRequestAdditionalFunds">
                        <StackPanel Margin="5">
                            <Image Source="download.png" />
                            <TextBlock x:Name="txtRequestFundsLabel" TextWrapping="Wrap" TextAlignment="Center">Request Additional Funds</TextBlock>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                            </Grid>
                            <Button  Click="btnRequestAdditionalFunds_Click">Request</Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center"  Grid.Row="1"  Grid.Column="2" Margin="10" Background="White">
                        <StackPanel Margin="5">
                            <Image Source="download.png" />
                            <TextBlock x:Name="txtShopDrinkPriceLabel" TextWrapping="Wrap" TextAlignment="Center">Drink Price</TextBlock>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="-"></Button>
                                <TextBlock Grid.Column="1" x:Name="txtShopDrinkPrice" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center">4.99</TextBlock>
                                <Button Grid.Column="2" Content="+"></Button>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabPlayer" Header="Player" IsEnabled="False"></TabItem>
            <TabItem x:Name="TabTeams" Header="Teams" IsEnabled="False"></TabItem>
        </TabControl>
    </StackPanel>
</Window>
