<Window x:Class="FIFAModdingUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIFAModdingUI"
        mc:Ignorable="d"
        Title="paulv2k4 FIFA Modding UI" Height="720" Width="800" WindowStyle="ThreeDBorderWindow" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
                <TextBox x:Name="txtFIFADirectory" Height="20" Text="" Grid.Column="0" FontSize="12" IsEnabled="False" />
            <Button Name="btnBrowseFIFADirectory" Content="Browse for FIFA" Grid.Column="1" Click="btnBrowseFIFADirectory_Click" />
        </Grid>
        

        <TabControl x:Name="MainViewer" Grid.Row="2" SelectionChanged="MainViewer_SelectionChanged" IsEnabled="False">
            <TabItem Header="Gameplay">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="23"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Name="chkUseBaseFIFAINI">Use Base FIFA 19 file (will reset your current locale.ini)</CheckBox>
                    <Button Name="btn_GP_SaveINI" Grid.Column="1" Content="Save your locale.INI" Click="Btn_GP_SaveINI_Click"/>

                    <TabControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <TabItem Header="General">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                <StackPanel>
                                    <Label Content="General Settings"  FontWeight="Bold" />
                                    <!--<StackPanel Orientation="Horizontal">
                                        <Label Content="Language" Width="200" />
                                        <ComboBox Name="cbLanguages" Width="180" />
                                    </StackPanel>-->
                                    <Label Content="Boots" Grid.Column="0" FontWeight="Bold"></Label>

                                    <CheckBox Name="chkEnableUnlockBootsAndCelebrations" Checked="ChkEnableUnlockBootsAndCelebrations_Checked" Margin="0,5,0,5">Unlock Boots and Celebrations</CheckBox>
                                    <Label Content="Difficulty" Grid.Column="0" FontWeight="Bold"></Label>
                                    
                                    <CheckBox Name="chkEnableHardDifficulty" Checked="ChkEnableHardDifficulty_Checked" Margin="0,5,0,5">Enable Hard Difficulty (Alpha test - AI Cheating may exist)</CheckBox>


                                    <Label Content="Random Multiplier Seed" Grid.Column="0" FontWeight="Bold"></Label>
                                    <CheckBox Name="chkDisableRandomSeed" Checked="ChkDisableRandomSeed_Checked" Margin="0,5,0,5">Disable randomizer which changes abilities at match start</CheckBox>


                                    
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <Label Content="Animation and Gameplay Settings" FontWeight="Bold" />
                                    <Label Content="These settings change game speed, AI decisions and much more!" />
                                    <Label Content="Right/Left Foot Speed/Ability (Affects Dribbling, Passing and Shooting)" Grid.Column="0"></Label>
                                    <Slider Name="sliderFOOT" Minimum="1" Maximum="100" Value="25" TickPlacement="BottomRight" TickFrequency="1"  Grid.Column="1"></Slider>
                                    <Label Content="Right/Left Upper Leg Speed (Affects Dribbling and Long Shooting)" Grid.Column="0"></Label>
                                    <Slider Name="sliderUPPERLEG" Minimum="1" Maximum="100" Value="50" TickPlacement="BottomRight" TickFrequency="1"  Grid.Column="1"></Slider>
                                    <Label Content="Ankle Speed / Use (Affects short passing and backheels)" Grid.Column="0"></Label>
                                    <Slider Name="sliderANKLE" Minimum="1" Maximum="100" Value="75" TickPlacement="BottomRight" TickFrequency="1"  Grid.Column="1"></Slider>
                                    <Label Content="Torso Speed (Turn speed / GK dive speed / tackle speed)" Grid.Column="0"></Label>
                                    <Slider Name="sliderTORSO" Minimum="1" Maximum="100" Value="75" TickPlacement="BottomRight" TickFrequency="1"  Grid.Column="1"></Slider>
                                    <Label Content="Hips Speed (Turn speed)" Grid.Column="0"></Label>
                                    <Slider Name="sliderHIPS" Minimum="1" Maximum="100" Value="100" TickPlacement="BottomRight" TickFrequency="1"  Grid.Column="1"></Slider>

                                    <Label Content="Fouling" FontWeight="Bold" />
                                    <CheckBox x:Name="KILL_EVERYONE" Content="Force AI Fouling (May cause too many red cards)"></CheckBox>
                                    
                                    <Label Content="Heading" FontWeight="Bold" />
                                    <Label Content="How much to reduce heading downward power" Grid.Column="0"></Label>
                                    <Slider Name="BALL_Y_VELOCITY_HEADER_REDUCTION" Minimum="-10.0" Maximum="10.0" Value="0" TickPlacement="BottomRight" TickFrequency="0.02" Grid.Column="1"></Slider>

                                    <Label Content="How much to reduce heading lateral power" Grid.Column="0"></Label>
                                    <Slider Name="BALL_LATERAL_VELOCITY_HEADER_REDUCTION" Minimum="-10.0" Maximum="10.0" Value="0" TickPlacement="BottomRight" TickFrequency="0.02" Grid.Column="1"></Slider>
                                    
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Attribute Weights"  Name="tab_GP_AttributeWeightSystem">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="125"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0">
                                    <!-- OVERRIDE GRAPH -->
                                    <Label Content="Attribute Graph (How much do the player attributes vary during the match?)" FontWeight="Bold"></Label>
                                    <CheckBox x:Name="OVERRIDE_ERROR_ATTRIBUTE" Content="Override Error Attribute"></CheckBox>
                                    <CheckBox x:Name="OVERRIDE_GRAPH_SHAPE" Content="Override Graph Shape"></CheckBox>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="OVERRIDE_GRAPH_SHAPE_HIGH" Width="200"></Label>
                                        <Slider x:Name="OVERRIDE_GRAPH_SHAPE_HIGH" Minimum="-1" Maximum="1" Value="0.2" TickPlacement="BottomRight" IsSnapToTickEnabled="True" TickFrequency="0.05"  Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="OVERRIDE_GRAPH_SHAPE_LOW" Width="200"></Label>
                                        <Slider x:Name="OVERRIDE_GRAPH_SHAPE_LOW" Minimum="-1" Maximum="1" Value="-0.2" TickPlacement="BottomRight" IsSnapToTickEnabled="True" TickFrequency="0.05"  Width="200"  />
                                    </StackPanel>
                                    <!-- ACCEL/DECEL GRAPH -->
                                    <!--<Label Content="Acceleration / Deceleration" FontWeight="Bold"></Label>-->
                                    
                                </StackPanel>
                                <ScrollViewer Grid.Row="1">
                                    <StackPanel>
                                        <Label Content="Attribute Weightings" FontWeight="Bold"></Label>
                                        <StackPanel x:Name="panel_GP_AttributeWeightSystem" >
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                            
                        </TabItem>
                        <TabItem Header="AI Objective System" Name="tab_GP_ObjectiveSystem">
                            <ScrollViewer>
                                <StackPanel>
                                    <Label Content="This is the AI Objective System, here you can Enable/Disable all AI options within the game."></Label>
                                    <StackPanel x:Name="panel_GP_ObjectiveSystem" 
                                        Height="Auto"
                                        Width="Auto" >

                                    </StackPanel>
                            </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Contextual" IsEnabled="True">
                            <ScrollViewer>
                                <StackPanel x:Name="panel_GP_ContextEffect">
                                    
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Name="tabRawFileView" Header="Raw File View" MouseDown="tabRawFileView_MouseDown" >
                            <ScrollViewer>
                                <TextBlock Name="tbRawFileView" Background="White"></TextBlock>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
                
            </TabItem>
            <TabItem Header="Career" IsEnabled="False"></TabItem>
        </TabControl>

    </Grid>
</Window>
