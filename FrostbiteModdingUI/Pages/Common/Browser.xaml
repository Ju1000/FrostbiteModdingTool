<UserControl x:Class="FIFAModdingUI.Pages.Common.Browser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FIFAModdingUI.Pages.Common"
              xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
            xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:materialDesignColors="clr-namespace:MaterialDesignColors;assembly=MaterialDesignColors"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GridSplitter Grid.Column="0"></GridSplitter>
        <Grid MaxHeight="400"  Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Background="White" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" ></ColumnDefinition>
                    <ColumnDefinition Width="312*" ></ColumnDefinition>
                    <ColumnDefinition Width="253*" ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <GridSplitter/>
                <GridSplitter Grid.Column="1" ></GridSplitter>
                <GridSplitter Grid.Column="2" ></GridSplitter>
                <Label Grid.Column="0">Filter:</Label>
                <TextBox Grid.Column="1" x:Name="txtFilter"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                    KeyUp="txtFilter_KeyUp"  />
                <CheckBox Grid.Column="2" x:Name="chkShowOnlyModified" 
                           Checked="chkShowOnlyModified_Checked" Unchecked="chkShowOnlyModified_Unchecked"
                           Content="Show Only Modified" HorizontalAlignment="Stretch"  />
            </Grid>

            <TreeView Grid.Row="1" x:Name="assetTreeView" ScrollViewer.VerticalScrollBarVisibility="Visible"  
                      BorderBrush="LightGray" BorderThickness="1"
                      SelectedItemChanged="assetTreeView_SelectedItemChanged"
                      >
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding PathName}"
                                   Tag="{Binding}"></TextBlock>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
        <StackPanel  Grid.Column="0" Grid.Row="1">
            <ListView x:Name="assetListView" 
                      ScrollViewer.VerticalScrollBarVisibility="Visible" 
                      Height="200" 
                      BorderBrush="LightGray" 
                      BorderThickness="1" 
                      HorizontalAlignment="Stretch" 
                      HorizontalContentAlignment="Stretch"
                      SelectionChanged="assetListView_SelectionChanged"
                      >
                <ListView.View>
                    <GridView >
                        <GridViewColumn Width="200" Header="Name">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" Tag="{Binding}" 
                                               >
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsModified}"
                                                        Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Asset Type">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding AssetType}" Tag="{Binding}"
                                               >
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsModified}"
                                                        Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Type">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Type}" Tag="{Binding}"
                                               >
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsModified}"
                                                        Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Is Modified">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IsModified}" Tag="{Binding}"
                                                >
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsModified}"
                                                        Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <Grid VerticalAlignment="Top" Grid.Column="1" Grid.RowSpan="2"  Height="500" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="30"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button x:Name="btnImport" IsEnabled="False" Click="btnImport_Click" Height="30" Background="Transparent">
                    <StackPanel Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                        <MaterialDesign:PackIcon Kind="Import" VerticalAlignment="Center" />
                        <Label Content="Import" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="btnExport" IsEnabled="False" Click="btnExport_Click" Height="30" Background="Transparent">
                    <StackPanel Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                        <MaterialDesign:PackIcon Kind="Export" VerticalAlignment="Center" />
                        <Label Content="Export" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="btnRevert" IsEnabled="False" Click="btnRevert_Click" Height="30" Background="Transparent">
                    <StackPanel Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                        <MaterialDesign:PackIcon Kind="Reverse" VerticalAlignment="Center" />
                        <Label Content="Revert" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Grid Grid.Row="1" Background="Gray" x:Name="ImageViewerScreen" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="512"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Background="White" Orientation="Horizontal">
                    <Label>Name:</Label>
                    <Label x:Name="lblImageName"></Label>
                    <Label>DDS Type:</Label>
                    <Label x:Name="lblImageDDSType"></Label>
                    <Label>RES Image Type:</Label>
                    <Label x:Name="lblImageRESType"></Label>
                    <Label>Image Size:</Label>
                    <Label x:Name="lblImageSize"></Label>
                </StackPanel>
                <Image Grid.Row="1" x:Name="ImageViewer" MinHeight="256" MinWidth="256" MaxWidth="512" MaxHeight="512">

                </Image>
                <StackPanel  Grid.Row="2" Background="White" Orientation="Horizontal">
                    <Label>CAS File:</Label>
                    <Label x:Name="lblImageCASFile"></Label>
                    <Label>CAS Offset:</Label>
                    <Label x:Name="lblImageCASOffset"></Label>
                    <Label>Bundle File:</Label>
                    <Label x:Name="lblImageBundleFile"></Label>
                </StackPanel>
            </Grid>

            <TextBox Grid.Row="1" x:Name="TextViewer" MaxHeight="400" MaxLines="999999" 
                     Visibility="Collapsed"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                      LostFocus="TextViewer_LostFocus"
                     >

            </TextBox>
            <StackPanel Grid.Row="1" x:Name="EBXViewer" Visibility="Collapsed">

            </StackPanel>

            
            <StackPanel Grid.Row="1" x:Name="UnknownLegacyFileViewer" Visibility="Collapsed">
                <TextBlock>The Editor currently doesn't support viewing of this Legacy File. Please Export and use an alternative Application.</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
