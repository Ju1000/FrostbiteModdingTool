<Window x:Class="FMT.Windows.LocaleINIEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMT.Windows"
        mc:Ignorable="d"
        Title="LocaleINIEditor" Height="450" Width="800">
    <Grid>
        <TextBox 
                TextWrapping="Wrap"
                AcceptsReturn="True"
                MaxLines="2000"
            ScrollViewer.VerticalScrollBarVisibility="Visible" Text="{Binding Data, Mode=TwoWay}"></TextBox>
    </Grid>
</Window>
