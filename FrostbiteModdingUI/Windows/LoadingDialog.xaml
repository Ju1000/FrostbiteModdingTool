<Window x:Class="FrostbiteModdingUI.Windows.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrostbiteModdingUI.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowState="Normal" Topmost="True"
        Title="" Height="200" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">Loading</Label>
        <Label FontSize="16" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="lblLoadingSubtitle" Content="Loading subtitle"></Label>
        <ProgressBar x:Name="pbar" Grid.Row="2"></ProgressBar>
        <Label FontSize="12" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="lblProgress" Content="Progress Message"></Label>
    </Grid>
</Window>
